<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup" style="display: flex">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (username) { %>
        <div class="form-group mb-2" style="display: flex">
          <a class="navbar-brand" href="/urls"><%= username %></a>
          <form action="/logout" method="POST"><button type="submit" class="btn btn-primary">logout</button></form>
        </div>
        
      <% } else { %>
        <div>
        <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#login" 
        aria-expanded="false" aria-controls="login" onclick="this.style = 'display: none'; document.getElementById('btnRegister').style = 'display: none'">
        Log In
          </button>
          <div class="collapse" id="login">
            <form action="/login" method="POST" id="login" class="form-inline">
              <input type="email" name="email" class="form-control" placeholder="what yo email is?" />
              <input type="password" name="password" class="form-control" style="margin-left: 10px;" placeholder="password...?" />
              <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Login Meow!</button>
            </form>
          </div>

          <button type="button" class="btn btn-primary" id="btnRegister" data-toggle="modal" data-target="#register">
            Register
          </button>
          <% include ./register %>
        </div>
      <% } %>
    </div>
  </nav>
</header>
